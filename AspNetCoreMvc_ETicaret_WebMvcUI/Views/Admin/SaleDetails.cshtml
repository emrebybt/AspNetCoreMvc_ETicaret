@model List<SaleDetailsViewModel>

@{
    ViewData["Title"] = "SaleDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Satış Listesi</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th> Ürün </th>
                                        <th> Adet </th>
                                        <th> Birim Fiyat </th>
                                        <th> Toplam Fiyat </th>
                                        <th> Tarih </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>

                                                @if (@item.Product.Name.Count() > 50)
                                                {
                                                    <a asp-action="Details" asp-controller="Urunler" asp-route-id="@item.ProductId" target="_blank">
                                                    @item.Product.Name.Substring(0, @item.Product.Name.Substring(0, 50).LastIndexOf(" ")).ToString()
                                                    </a>
                                                    <span>...</span>
                                                }
                                                else
                                                {
                                                    <a asp-action="Details" asp-controller="Urunler" asp-route-id="@item.ProductId">
                                                    @item.Product.Name
                                                    </a>
                                                }
                                            </td>
                                            <td> @item.Quantity </td>
                                            <td> @item.Price.ToString("C") </td>
                                            <td> @((item.Quantity * @item.Price).ToString("C")) </td>
                                            <td> @item.CreatedDate.ToString("dd-MMM-yyyy") </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin templates</a> from Bootstrapdash.com</span>
        </div>
    </footer>
    <!-- partial -->
</div>
